---
import Group from "../layouts/Group.astro";
import MDIcon from "./MDIcon.astro";

type Link = {
  title: string;
  href: string;
};

let links: Link[] = [
  {
    title: "About",
    href: "/about",
  },
  //   {
  //     title: "News",
  //     href: "/news",
  //   },
  {
    title: "Events",
    href: "/events",
  },
  {
    title: "Lab",
    href: "/lab",
  },
  //   {
  //     title: "Projects",
  //     href: "/projects",
  //   },
];
---

<header>
  <a href="/">XR Club at UMD</a>
  <input id="menu-btn" type="checkbox" />
  <label for="menu-btn">
    <MDIcon name="mdiMenu" />
  </label>
  <nav>
    {links.map((l) => <a href={l.href}>{l.title}</a>)}
  </nav>
</header>
<style>
  header {
    position: absolute;
    padding-left: 2rem;
    padding-right: 2rem;
    left: 0;
    right: 0;
    color: white;
    padding-top: 2rem;
    font-size: 1.25em;
    display: flex;
    filter: drop-shadow(0 0 0.75rem black);
    background: linear-gradient(rgba(0, 0, 0, 0.5), transparent);
    z-index: 1;
    box-sizing: border-box;
    flex-wrap: wrap;
  }

  a {
    text-decoration: none;
    color: white;
    text-transform: uppercase;
  }

  nav {
    display: flex;
    gap: 2rem;
    justify-content: right;
    align-items: center;
    flex: 1;
    transition: max-height 0.25s ease-in-out;
    overflow: hidden;
  }

  label {
    display: none;
    justify-content: right;
    align-items: center;
    flex: 1;
  }

  input {
    appearance: none;
  }

  @media (orientation: portrait) {
    nav {
      flex-direction: column;
      flex-basis: 100%;
      padding-top: 2rem;
      max-height: 0;
      
      align-items: flex-start;
    }

    label {
      display: flex;

    }

    input:checked ~ nav {
      max-height: 20rem;
    }
  }
</style>
