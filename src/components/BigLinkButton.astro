---
type Props = {
  href: string;
  text: string;
  buttonColor?: string;
};

let { href, text, buttonColor } = Astro.props;
---

<a href={href} style={{"--button-color": buttonColor}}>
  {text}
</a>
<style>
  a {
    box-sizing: content-box;
    --button-color: var(--xr-secondary);
    padding-left: 1.5rem;
    padding-right: 1.5rem;
    padding-top: 0.75rem;
    padding-bottom: 0.75rem;
    min-width: 10rem;
    text-align: center;
    color: white;
    text-decoration: none;
    display: inline-block;
    border: solid 0.25rem var(--button-color);
    background-color: rgba(0,0,0,0.5);
    border-radius: 9999px;
    text-transform: uppercase;
    backdrop-filter: blur(10px);
    transition: box-shadow 0.5s;
    box-shadow: 0px 0px 25px transparent;
  }

  a:hover {
    transition: box-shadow 0.1s;
    box-shadow: 0px 0px 25px var(--button-color);
  }
</style>
