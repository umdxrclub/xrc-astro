---
import Group from "../layouts/Group.astro";
import { DiscordInviteUrl, GoogleCalendarUrl, TerpLinkUrl } from "../types/links";
import BigLinkButton from "./BigLinkButton.astro";
---

<Group direction="row" alignItems="center" justifyContent="center">
    <BigLinkButton
      href={DiscordInviteUrl}
      text="Join Discord"
      buttonColor="#5865F2"
    />
    <BigLinkButton href={TerpLinkUrl} text="Join TerpLink" />
    <BigLinkButton href={GoogleCalendarUrl} text="Join Calendar"/>
  </Group>
</Group>