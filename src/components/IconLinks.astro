---
import Icons from "@mdi/js";
import MDIcon from "./MDIcon.astro";
import Group from "../layouts/Group.astro";

type Props = {
  links: IconLink[];
  scale?: number;
};

export type IconLink = {
  url: string;
  icon: keyof typeof Icons;
};

const { scale, links } = Astro.props;
---
<div>
  <Group noCollapse direction="row" justifyContent="center" alignItems="center" wrap="wrap">
    {
      links.map((l) => (
        <a href={l.url}>
          <MDIcon name={l.icon} scale={scale} />
        </a>
      ))
    }
  </Group>
</div>
<style>
  div {
    padding-left: 1rem;
    padding-right: 1rem;
  }
</style>
