<div class="parent">
  <div class="content">
    <slot />
  </div>
</div>
<style>
  .parent {
    max-width: 100%;
    min-block-size: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    overflow: hidden;
    padding-top: 3rem;
    padding-bottom: 3rem;
    padding-left: 1rem;
    padding-right: 1rem;
    background-size: 3rem 3rem;
    background-image: radial-gradient(
        circle,
        color-mix(in srgb, var(--xr-primary) 25%, black) 2px,
        rgba(0, 0, 0, 0) 2px
      ),
      linear-gradient(var(--xr-background), var(--xr-background));
  }
  .content {
    width: 100%;
    max-width: 60rem;
    font-size: 1.3rem;
    min-height: 60vh;
  }
</style>
<style is:inline>
    .content p {
        line-height: 1.5em;
    }

    .content h1 {
      text-align: center;
      text-transform: uppercase;
      color: var(--xr-primary);
      font-weight: 800;
  }
</style>
