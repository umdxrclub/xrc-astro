---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Banner from "../components/Banner.astro";
import XRCPageContent from "../layouts/XRCPageContent.astro";
import Firebase from "../components/Firebase.astro";

interface Props {
  bannerHref?: string;
  bannerText?: string;
  bannerNoTint?: boolean;
}

const { bannerHref, bannerText, bannerNoTint } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <title>XR Club @ UMD</title>
    <meta name="theme-color" content="#0b040a" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Rubik:ital,wght@0,300..900;1,300..900&display=swap" rel="stylesheet">
  </head>
  <body>
    <Header />
    <main>
      <Banner href={bannerHref} text={bannerText} noTint={bannerNoTint} >
        <slot name="banner" />
      </Banner>
      <XRCPageContent>
        <slot />
      </XRCPageContent>
    </main>
    <Footer />
    <Firebase />
  </body>
</html>
<style is:global>

  :root {
    --font-primary: "Rubik", sans-serif;
    --font-secondary: "Lato", sans-serif;
    --xr-red: #e61a31;
    --xr-purple: #661556;
    --xr-cool-red: #a52256;
    --xr-pink: #ff3f8c;
    --xr-orange: rgb(255, 105, 63);
    --xr-indigo: #4d1798;
    --xr-blue: #2588ea;
    --xr-cool-blue: #0d4f92;

    --xr-admin: var(--xr-red);
    --xr-lab: var(--xr-blue);
    --xr-events: #1fa239;
    --xr-outreach: #e3ad19;
    --xr-media: var(--xr-purple);
    --xr-projects: var(--xr-cool-red);

    --xr-gradient: linear-gradient(
      -45deg,
      var(--xr-red),
      var(--xr-cool-red),
      var(--xr-purple),
      var(--xr-indigo)
    );
    --xr-primary: var(--xr-pink);
    --xr-secondary:  var(--xr-red);
    --text-color: color-mix(in srgb, var(--xr-primary) 50%, white);
    --xr-background: color-mix(in srgb, var(--xr-primary) 5%, black);
  }

  body {
    margin: 0;
    font-family: var(--font-primary);
    background-color: var(--xr-background);
    color: var(--text-color);
    box-sizing: border-box;
  }
  *,
  *:before,
  *:after {
    box-sizing: inherit;
  }

  h1,h2,h3,h4,h5,h6,p {
    margin: 0;
    padding: 0;
  }

  h1 {
    font-stretch: ultra-expanded;
  }

  main {
    min-height: 100vh;
  }
</style>
